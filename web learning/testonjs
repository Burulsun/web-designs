<!DOCTYPE html>
<html lang="EN">
<head>
  <meta charset = 'UTF-8'>
  <title>timeconverter</title>
  </head>
  <body>
      <script type="text/javascript">
      //Создаем игру "Камень-ножницы-бумага"
      var botscore = 0;
      var userscore =0;
      var botchoice = Math.floor(Math.random()*3)+1;
      var userchoice = parseInt(prompt("Выберите один из вариантов: 1-камень,2-бумага,3-ножницы "));
      do {
        if (botchoice ==userchoice){
          botscore+=0;
          userscore+=0;
          document.write("Ничья!")
      }
        if (userchoice==1 && botchoice == 3){
          userscore+=1
      }
        if (userchoice==1 && botchoice == 2){
          botscore+=1
      }

        if (botchoice==1 && userchoice == 2){
          userscore+=1
      }
        if (botchoice==1 && userchoice == 3){
          botscore+=1
      }
        if (botchoice==2 && userchoice == 3){
          userscore+=1
      }
        if (userchoice==2 && botchoice == 3){
          botscore+=1
      }
        if (userscore+=1){
          document.write("Вы победили! ")}
        if (botscore+=1){
          document.write("Вы победили! ")}
      }
      while(userscore==3 || botscore==3)

      </script>
  </body>
  </html>
